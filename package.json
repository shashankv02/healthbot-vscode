{
 "name": "healthbot",
 "displayName": "HealthBot",
 "description": "Extension adds syntax highlighting, auto-completion snippets and syntax validation for HealthBot Rules and Playbooks",
 "version": "0.0.1",
 "engines": {
  "vscode": "^1.43.0"
 },
 "repository": {
  "type": "git",
  "url": "https://github.com/shashankv02/healthbot-vscode"
 },
 "keywords": ["healthbot", "juniper"],
 "scripts": {
  "vscode:prepublish": "npm run webpack",
  "webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
  "webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
  "compile": "tsc -b",
  "compile:client": "tsc -b ./client/tsconfig.json",
  "compile:server": "tsc -b ./server/tsconfig.json",
  "watch": "tsc -b -w",
  "lint": "npm run lint:client && npm run lint:server",
  "lint:client": "eslint --config ./client/.eslintrc.json ./client/src/*.ts",
  "lint:server": "eslint --config ./server/.eslintrc.json ./server/src/*.ts",
  "clean": "rimraf client/out && rimraf server/out",
  "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
 },
 "publisher": "vshashank",
 "icon": "img/logo.png",
 "categories": [
  "Programming Languages",
  "Snippets"
 ],
 "activationEvents": [
  "onLanguage:HealthBot",
  "onCommand:healthbot.validate"
 ],
 "main": "./client/out/extension",
 "contributes": {
  "languages": [
   {
    "id": "HealthBot",
    "aliases": [
     "HealthBot",
     "rule"
    ],
    "extensions": [
     ".rule",
     ".playbook"
    ],
    "configuration": "./language-configuration.json"
   }
  ],
  "grammars": [
   {
    "language": "HealthBot",
    "scopeName": "source.healthbot",
    "path": "./syntaxes/rule.tmLanguage.json"
   }
  ],
  "snippets": [
   {
    "language": "HealthBot",
    "path": "./snippets/snippets.json"
   }
  ],
  "configuration": {
   "type": "object",
   "title": "HealthBot Configuration",
   "properties": {
    "healthbot.mgd": {
     "scope": "application",
     "type": "string",
     "default": "healthbot_mgd:3.0.0",
     "description": "MGD image to use for syntax validation"
    }
   }
  },
  "menus": {
   "commandPalette": [
    {
     "command": "healthbot.validate",
     "when": "editorLangId == HealthBot"
    }
   ]
  },
  "commands": [
   {
    "command": "healthbot.validate",
    "category": "HealthBot",
    "title": "Validate HealthBot Rule",
    "arguments": "ddd"
   }
  ]
 },
 "devDependencies": {
  "@types/mocha": "^5.2.7",
  "@types/node": "^12.12.0",
  "@typescript-eslint/parser": "^2.3.0",
  "eslint": "^6.4.0",
  "ts-loader": "^7.0.5",
  "typescript": "^3.9.4",
  "webpack": "^4.43.0",
  "webpack-cli": "^3.3.11"
 },
 "dependencies": {
  "merge-options": "^2.0.0"
 }
}
